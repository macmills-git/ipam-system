# Database Configuration
DATABASE_URL=postgresql://ipam:ipam_password@postgres:5432/ipam
DATABASE_TEST_URL=postgresql://ipam:ipam_password@postgres:5432/ipam_test

# Security
SECRET_KEY=change-this-to-a-secure-random-string-min-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://redis:6379/0

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Scanner Configuration
SCANNER_ENABLED=true
SCANNER_INTERVAL_SECONDS=300
SCANNER_TIMEOUT_SECONDS=2
SCANNER_CONCURRENT_SCANS=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email (for notifications - optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=ipam@example.com
SMTP_PASSWORD=
SMTP_FROM=ipam@example.com

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Environment
ENVIRONMENT=development
DEBUG=true

# Frontend (for build)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Demo Credentials (CHANGE IN PRODUCTION!)
DEMO_ADMIN_EMAIL=admin@ipam.local
DEMO_ADMIN_PASSWORD=Admin123!
