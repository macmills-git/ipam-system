{
  "info": {
    "name": "IPAM API",
    "description": "Enterprise IP Address Management System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"access_token\", jsonData.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@ipam.local\",\n  \"password\": \"Admin123!\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Subnets",
      "item": [
        {
          "name": "List Subnets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subnets",
              "host": ["{{base_url}}"],
              "path": ["subnets"]
            }
          }
        },
        {
          "name": "Create Subnet",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cidr\": \"10.100.0.0/24\",\n  \"description\": \"Test Network\",\n  \"location\": \"Office\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/subnets",
              "host": ["{{base_url}}"],
              "path": ["subnets"]
            }
          }
        },
        {
          "name": "Get Subnet",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/subnets/1",
              "host": ["{{base_url}}"],
              "path": ["subnets", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "IP Addresses",
      "item": [
        {
          "name": "List IPs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/ips?status=free",
              "host": ["{{base_url}}"],
              "path": ["ips"],
              "query": [
                {
                  "key": "status",
                  "value": "free"
                }
              ]
            }
          }
        },
        {
          "name": "Allocate IP",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subnet_id\": 1,\n  \"count\": 1\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/ips/allocate",
              "host": ["{{base_url}}"],
              "path": ["ips", "allocate"]
            }
          }
        },
        {
          "name": "Assign IP to Device",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"device_id\": 1,\n  \"hostname\": \"server-01\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/ips/1/assign",
              "host": ["{{base_url}}"],
              "path": ["ips", "1", "assign"]
            }
          }
        }
      ]
    },
    {
      "name": "Devices",
      "item": [
        {
          "name": "List Devices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/devices",
              "host": ["{{base_url}}"],
              "path": ["devices"]
            }
          }
        },
        {
          "name": "Create Device",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hostname\": \"new-server\",\n  \"device_type\": \"Server\",\n  \"owner\": \"IT Team\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/devices",
              "host": ["{{base_url}}"],
              "path": ["devices"]
            }
          }
        }
      ]
    },
    {
      "name": "Bulk Operations",
      "item": [
        {
          "name": "Export Subnets CSV",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/export/csv?entity_type=subnets",
              "host": ["{{base_url}}"],
              "path": ["export", "csv"],
              "query": [
                {
                  "key": "entity_type",
                  "value": "subnets"
                }
              ]
            }
          }
        },
        {
          "name": "Import Subnets CSV",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "entity_type",
                  "value": "subnets",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/import/csv",
              "host": ["{{base_url}}"],
              "path": ["import", "csv"]
            }
          }
        }
      ]
    },
    {
      "name": "Audit Logs",
      "item": [
        {
          "name": "List Audit Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/audit-logs",
              "host": ["{{base_url}}"],
              "path": ["audit-logs"]
            }
          }
        }
      ]
    }
  ]
}
